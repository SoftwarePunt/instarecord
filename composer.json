{
  "name": "softwarepunt/instarecord",
  "description": "ActiveRecord Database ORM layer for MySQL and PostgreSQL",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Roy de Jong",
      "email": "roy@softwarepunt.nl"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.1",
    "ext-pdo": "*",
    "ext-json": "*"
  },
  "suggest": {
    "ext-pdo_mysql": "MySQL support",
    "ext-pdo_pgsql": "PostgreSQL support"
  },
  "require-dev": {
    "phpunit/phpunit": "^9"
  },
  "autoload": {
    "psr-4": {
      "SoftwarePunt\\Instarecord\\": "lib/",
      "SoftwarePunt\\Instarecord\\Tests\\": "tests/",
      "Instasell\\Instarecord\\": "lib/",
      "Instasell\\Instarecord\\Tests\\": "tests/"
    }
  }
}
